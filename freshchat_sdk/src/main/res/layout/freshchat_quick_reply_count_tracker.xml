<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/counter_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/freshchat_white">

    <View
        android:id="@+id/freshchat_count_tracket_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/freshchat_quick_action_button_divider"
        android:outlineSpotShadowColor="@color/freshchat_quick_action_button_divider"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/count_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="14dp"
        android:gravity="center_horizontal"
        android:text="@string/freshchat_count_tracker_count_text"
        style="?attr/freshchatCounterTextViewStyle" />

    <Button
        android:id="@+id/submit_button"
        style="?attr/freshchatCountTrackerSubmitButtonStyle"
        android:enabled="false"
        android:alpha="0.38"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/count_textView"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

</RelativeLayout>

